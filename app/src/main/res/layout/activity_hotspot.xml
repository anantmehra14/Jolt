<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.joltindia.jolt.jolt.hotspot"
    android:background="@drawable/login_back"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv2"
        android:text="Hotspot Locations"
        android:textStyle="bold"
        android:textSize="30dp"
        android:textColor="#ffffff"
      android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        />
    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rg"
        android:layout_below="@id/tv2"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp">
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/r1"
            android:textSize="18dp"
            android:layout_marginTop="0dp"
            android:text="Mc Donalds"
            android:textColor="#ffffff"

            />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/r2"
            android:textSize="18dp"
            android:layout_marginTop="10dp"
            android:text="Ansal Plaza"
            android:textColor="#ffffff"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/r3"
            android:textSize="18dp"
            android:text="Sec-23 Market"
            android:layout_marginTop="10dp"
            android:textColor="#ffffff"

            />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/r4"
            android:textSize="18dp"
            android:layout_marginTop="10dp"
            android:text="Green Chick Chop"
            android:textColor="#ffffff"
            />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/r5"
            android:textSize="18dp"
            android:layout_marginTop="10dp"
            android:text="Sec-22 Market"
            android:textColor="#ffffff"

            />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/r6"
            android:textSize="18dp"
            android:layout_marginTop="10dp"
            android:text="DLF Cyberhub"
            android:textColor="#ffffff"
            />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/r7"
            android:textSize="18dp"
            android:layout_marginTop="10dp"
            android:text="Pizza Hut"
            android:textColor="#ffffff"

            />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/r8"
            android:textSize="18dp"
            android:text="Burger King (MG Road)"
            android:layout_marginTop="10dp"
            android:textColor="#ffffff"
            />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/r9"
            android:textSize="18dp"
            android:text="Anywhere Else ?"
            android:layout_marginTop="10dp"
            android:textColor="#ffffff"
            />


    </RadioGroup>

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="fare"
        android:textSize="18dp"
        android:textStyle="bold"
        android:onClick="onButtonClicked"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="435dp"/>

      <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/mcd"
       android:layout_marginTop="68dp"
        android:layout_marginLeft="150dp"
        android:background="@drawable/mcd"/>

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/ansal"
        android:layout_marginTop="108dp"
        android:layout_marginLeft="150dp"
        android:background="@drawable/mall"/>

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/sec23"
        android:layout_marginTop="153dp"
        android:layout_marginLeft="165dp"
        android:background="@drawable/sec23"/>

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/green"
        android:layout_marginTop="195dp"
        android:layout_marginLeft="190dp"
        android:background="@drawable/green"/>

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/sec22"
        android:layout_marginTop="238dp"
        android:layout_marginLeft="170dp"
        android:background="@drawable/sec22"
        />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/dlf"
        android:layout_marginTop="278dp"
        android:layout_marginLeft="160dp"
        android:background="@drawable/dlf"/>

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/hut"
        android:layout_marginTop="323dp"
        android:layout_marginLeft="130dp"
        android:background="@drawable/hut"/>

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/king"
        android:layout_marginTop="365dp"
        android:layout_marginLeft="230dp"
        android:background="@drawable/king"/>



</RelativeLayout>